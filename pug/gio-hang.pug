              table.table.table-bordered
                tbody
                  tr
                    td Tổng tiền
                    td 1.999.000 đ
                  tr
                    td Phí vận chuyển
                    td 20.000 đ
                  tr
                    td Tổng cộng
                    td.total-over 2.999.000 đ
              .cart-page-total-btn
                button(type='submit')
